{
  "productName": "Crane",
  "version": "0.1.0",
  "identifier": "com.crane.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Crane",
        "width": 1000,
        "height": 700,
        "minWidth": 960,
        "minHeight": 560
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https:; font-src 'self' data:; connect-src ipc: http://ipc.localhost"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/shamith16/Crane/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  },
  "bundle": {
    "createUpdaterArtifacts": "v1Compatible",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "Productivity",
    "copyright": "MIT OR Apache-2.0",
    "shortDescription": "Fast, open-source download manager",
    "longDescription": "Crane is a cross-platform download manager with multi-connection downloads, pause/resume, queue management, and browser extension integration.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": null,
      "nsis": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
